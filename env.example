# Agricultural Platform - Environment Variables Template
# Copy this file to .env and configure your values

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================

# Environment
NODE_ENV=development
PORT=3001

# Application URLs
CORS_ORIGIN=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:3001/graphql
NEXT_PUBLIC_APP_NAME=Agricultural Platform

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# PostgreSQL Database
DATABASE_URL=postgresql://postgres:postgres123@postgres:5432/agricultural_platform

# Redis Cache
REDIS_URL=redis://redis:6379

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
# Generate secure 32+ character keys
JWT_SECRET=your-super-secret-jwt-key-change-in-production-32-chars-minimum
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-32-chars-minimum
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Field Encryption Key (32 characters exactly)
ENCRYPTION_KEY=your-32-char-encryption-key-here

# ==============================================
# SMS & EMAIL SERVICES
# ==============================================

# Twilio (for OTP SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid (for emails)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@agricultural-platform.com

# ==============================================
# PAYMENT GATEWAY
# ==============================================

# Razorpay (Payment Processing)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
NEXT_PUBLIC_RAZORPAY_KEY_ID=your_razorpay_key_id

# ==============================================
# FILE STORAGE
# ==============================================

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=your-agricultural-platform-bucket

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# ==============================================
# AI SERVICE CONFIGURATION
# ==============================================

# AI Quality Assessment Service
AI_SERVICE_URL=http://ai-service:5000

# ==============================================
# RATE LIMITING
# ==============================================

# General API rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Auth endpoints rate limiting
AUTH_RATE_LIMIT_MAX=5

# ==============================================
# BUSINESS RULES
# ==============================================

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6
MAX_OTP_ATTEMPTS=3

# Email Verification
EMAIL_VERIFICATION_EXPIRY_HOURS=24

# Bidding Rules
MAX_NEGOTIATION_ROUNDS=2
BID_EXPIRY_HOURS=24

# ==============================================
# LOGGING CONFIGURATION
# ==============================================

LOG_LEVEL=info
LOG_FORMAT=json

# ==============================================
# DEVELOPMENT ONLY
# ==============================================

# For testing purposes - use actual services in production
MOCK_SMS=false
MOCK_EMAIL=false
MOCK_PAYMENT=false

# Database seeding
SEED_DATABASE=true

# ==============================================
# PRODUCTION SECURITY HEADERS
# ==============================================

# Content Security Policy
CSP_DIRECTIVES=default-src 'self'; script-src 'self' 'unsafe-eval'; style-src 'self' 'unsafe-inline'

# CORS Configuration
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# ==============================================
# MONITORING & ANALYTICS
# ==============================================

# Application monitoring
SENTRY_DSN=your_sentry_dsn
GOOGLE_ANALYTICS_ID=your_ga_id

# Health check intervals
HEALTH_CHECK_INTERVAL=30000

# ==============================================
# DOCKER CONFIGURATION
# ==============================================

# Docker image tags (for production deployments)
BACKEND_IMAGE_TAG=latest
FRONTEND_IMAGE_TAG=latest
AI_SERVICE_IMAGE_TAG=latest

# ==============================================
# PRODUCTION DEPLOYMENT
# ==============================================

# Domain configuration
DOMAIN=agricultural-platform.com
API_DOMAIN=api.agricultural-platform.com
STATIC_DOMAIN=static.agricultural-platform.com

# SSL Configuration
SSL_CERT_PATH=/etc/letsencrypt/live/agricultural-platform.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/agricultural-platform.com/privkey.pem

# Load balancer configuration
ENABLE_LOAD_BALANCER=false
LOAD_BALANCER_URL=http://load-balancer:80

# ==============================================
# EXTERNAL INTEGRATIONS
# ==============================================

# Maps API (for location services)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Weather API (for agricultural insights)
WEATHER_API_KEY=your_weather_api_key

# Government APIs (for GST/Aadhaar validation)
GST_VALIDATION_API=your_gst_validation_api
AADHAAR_VALIDATION_API=your_aadhaar_validation_api

# ==============================================
# BACKUP CONFIGURATION
# ==============================================

# Automated backup settings
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# ==============================================
# NOTES
# ==============================================
#
# SECURITY IMPORTANT:
# 1. Never commit this file with real credentials to version control
# 2. Use strong, unique passwords and keys
# 3. Rotate secrets regularly in production
# 4. Use environment-specific configurations
# 5. Enable 2FA for all third-party services
#
# DEVELOPMENT:
# - Use local services (postgres, redis) for development
# - Mock external services to avoid charges during development
# - Use ngrok or similar for webhook testing
#
# PRODUCTION:
# - Use managed database services (RDS, Cloud SQL)
# - Use managed cache services (ElastiCache, Memorystore)
# - Enable SSL/TLS for all communications
# - Set up monitoring and alerting
# - Configure automated backups
#
# ==============================================
